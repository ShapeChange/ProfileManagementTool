{
    "name": "pmt",
    "version": "1.0.0-rc3",
    "description": "",
    "private": true,
    "main": "server.js",
    "scripts": {
        "installDev": "npm-workspace install",
        "start": "node server.js",
        "installBuild": "npm --only=dev install && cd pmt-app && npm --only=dev install",
        "build": "webpack -p --env production --config webpack.config.production.js",
        "installProd": "cd dist && npm --production install",
        "prod": "NODE_ENV=production node dist/server.js",
        "installTest": "cd pmt-data-access && npm install && cd .. && cd pmt-io && npm install && cd .. && cd pmt-validation && npm install",
        "test": "mocha --recursive ./pmt-io/test ./pmt-data-access/test ./pmt-validation/test",
        "win": "cd dist && npmAddScript -k preinstall -v \"stop-service && uninstall-service\" -f && npmAddScript -k postinstall -v \"install-service && start-service\" -f && bundled-dependencies && rm npm-shrinkwrap.json"
    },
    "author": "interactive instruments GmbH",
    "license": "GPL-3.0",
    "devDependencies": {
        "bundled-dependencies": "^2.1.0",
        "clean-webpack-plugin": "^0.1.16",
        "copy-webpack-plugin": "^4.0.1",
        "link-parent-bin": "^0.1.2",
        "mocha": "^3.4.2",
        "npe": "^1.1.0",
        "npm-add-script": "^1.1.0",
        "webpack": "^2.2.0",
        "webpack-hot-middleware": "^2.18.0",
        "webpack-merge": "^4.1.0"
    },
    "dependencies": {
        "bluebird": "^3.5.0",
        "compression": "^1.6.2",
        "convict": "^4.0.0",
        "express": "^4.15.3",
        "http-shutdown": "^1.2.0",
        "pmt-backend": "^1.0.0",
        "pmt-data-access": "^1.0.0",
        "pmt-io": "^1.0.0",
        "pmt-validation": "^1.0.0"
    }
}
